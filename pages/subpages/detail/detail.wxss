.ui-clear {
  zoom: 1; }
  .ui-clear:before, .ui-clear:after {
    display: table;
    content: " "; }
  .ui-clear:after {
    clear: both; }

.ui-overflow-clip {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap; }

.ui-overflow-clip-two {
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  word-break: break-all; }

.ui-fl {
  float: left; }

.ui-fr {
  float: right; }

.ui-tl {
  text-align: left; }

.ui-tr {
  text-align: right; }

.ui-tc {
  text-align: center; }

.ui-tj {
  text-align: justify; }

.discover {
  display: inline-block;
  margin-left: 10rpx; }
  .discover > .iconfont {
    display: inline-block; }

.header {
  padding: 40rpx 30rpx 50rpx 30rpx; }
  .header > .title {
    font-weight: bold;
    color: 36rpx; }
  .header > .author-wrap {
    display: table;
    vertical-align: middle;
    margin-top: 40rpx;
    width: 100%; }
    .header > .author-wrap > .author {
      display: table-cell;
      font-size: 28rpx;
      color: #606266; }
    .header > .author-wrap > .iconfont {
      display: table-cell;
      text-align: right;
      color: #606266; }

.rich-text-wrap {
  padding: 0 20rpx; }
